@model WebApplication.ViewModels.Home.LoginVM
@{
   ViewBag.Title = "Login";
}

<fieldset>
    <legend>Login</legend>
    <form action="/Home/Login" method="post">
        <div class="grid">
            <div class="row">
                <div class="col-1">
                    @Html.LabelFor(m => m.Username)
                </div>
                <div class="col-2">
                    @Html.EditorFor(m => m.Username)
                    @Html.ValidationMessageFor(m => m.Username)
                </div>
            </div>
            <div class="row">
                <div class="col-1">
                    @Html.LabelFor(m => m.Password)
                </div>
                <div class="col-2">
                    @Html.PasswordFor(m => m.Password)
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    @Html.ValidationMessage("authFailed")
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <div class="right">
                        <input type="submit" value="Login" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</fieldset>

